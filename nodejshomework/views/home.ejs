<!DOCTYPE html>
<html lang="en">

<head>
    <% include head %>
</head>
<script>
    function clearData() {
        document.getElementById("stdName").value = '';
        document.getElementById("stdId").value = '';
        document.getElementById("stdDepartment").value = '';
    }
</script>

<body id="AddUserForm">
    <div class="jumbotron" style="width:500px;text-align: center; margin: auto;">
        <div>
            <div class="main-div">
                <h2>User Information</h2>
                <form action="http://127.0.0.1:8080/add" method="post" id="addUser">
                    <div class="form-group">
                        <input type="text" class="form-control" required name="stdName" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" required pattern="[0-9]+" name="stdId" placeholder="Student ID">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="stdDepartment" required pattern="^[a-zA-Z\s]+$" placeholder="Department">
                    </div>
                    <button type="reset" class="btn btn-primary" onclick="clearData()">Clear</button>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</body>

</html>